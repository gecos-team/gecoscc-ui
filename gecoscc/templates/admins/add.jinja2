{% extends "base_navbar.jinja2" %}

{% block nav_bar_home %}{% endblock %}
{% block nav_bar_admins %}active{% endblock %}

{% block inner_content %}
    <div class="container" id="admin-container">
        <h1>{{ gettext('Administrators') }}</h1>
        {% block breadcrumbs %}
            <ol class="breadcrumb">
                <li><a href="{{ request.route_url('admins') }}">{{ gettext('Administrators') }}</a></li>
                <li class="active">{{ gettext('Add Administrator') }}</li>
            </ol>
        {% endblock %}
        {% block form_content %}
            {{ admin_user_form|safe }}
        {% endblock %}
    </div>
{% endblock %}
{% block extrajs %}
    <script type="text/javascript">
        (function($){
            $(document).ready(function () {
                $("select[name='cc_auth_type']").change(function() {
                    if(this.value == 'ldap') {
                        $("input[name='password']").prop('disabled', true);
                        $("input[name='repeat_password']").prop('disabled', true);
                    } else {
                        $("input[name='password']").prop('disabled', false);
                        $("input[name='repeat_password']").prop('disabled', false);

                    }
                });
            });
        })(jQuery);
    </script>
{% endblock %}

